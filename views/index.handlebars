<main class="text-center py-5">
  <div class="">
    {{#each categories}}
    <button class="btn btn-purple btn-sm">{{name}}</button>
    {{/each}}
    
  </div>

  <div class="container">
<!-- Section: Magazine v.2 -->
<section class="magazine-section my-5">

  <!-- Section description -->
  <h5 class="text-center dark-grey-text w-responsive mx-auto mb-3">Do you know how common everyday items, such as mirrors, fireworks or sunglasses work?</h5>
  <h5 class="text-center dark-grey-text w-responsive mx-auto mb-5">These collections of Innovation articles explores the workings of objects you may come into contact with on a regular basis.</h5>

<div>
</div>


  <!-- Grid row -->
  <div class="row">
  {{#each articles}}
    {{#if @first}}
      <!-- Grid column -->
      <div class="col-lg-6 col-md-12">

        <!-- Featured news -->
        <div class="single-news mb-lg-0 mb-4">

          <!-- Image -->
          <div class="view overlay rounded z-depth-1-half mb-4">
            <img class="img-fluid lazyload" data-size="auto" data-src="{{imgSrc}}" data-srcset="{{imgSet}}">
            <a href="/articles/{{_id}}">
              <div class="mask rgba-white-slight"></div>
            </a>
          </div>

          <!-- Category -->
          <div class="news-data d-flex justify-content-between">
            <a href="#!" class="deep-orange-text">
              <h6 class="font-weight-bold">{{category}}</h6>
            </a>
          </div>

          <!-- Excerpt -->
          <h3 class="font-weight-bold dark-grey-text mb-3"><a>{{title}}</a></h3>
          <p class="dark-grey-text mb-lg-0 mb-md-5 mb-3">{{blurb}}</p>

        </div>
        <!-- Featured news -->
      <hr class="mb-5">
      </div>
      <!-- Grid column -->
    {{else}}
    {{/if}}
  {{/each}}  

    <!-- Grid column -->
    <div class="col-lg-6 col-md-12">
      {{#each articles}}
        {{#if @first}}
        {{else}}
        <!-- Small news -->
        <div class="single-news mb-4">

          <!-- Grid row -->
          <div class="row">

            <!-- Grid column -->
            <div class="col-md-3">

              <!--Image-->
              <div class="view overlay rounded z-depth-1">
                <img class="img-fluid lazyload" data-size="auto" data-src="{{imgSrc}}" data-srcset="{{imgSet}}">
                <a href="/articles/{{_id}}">
                  <div class="mask rgba-white-slight"></div>
                </a>
              </div>
                <a href="#!" class="deep-orange-text mb-4">
                  <p class="font-weight-bold smallFont">{{category}}</p>
                </a>

            </div>
            <!-- Grid column -->

            <!-- Grid column -->
            <div class="col-md-9">

              <!-- Excerpt -->
              <p class="font-weight-bold dark-grey-text">{{title}}</p>
              <div class="d-flex justify-content-between">
                <div class="col-11 text-truncate pl-0 mb-3">
                  <a href="/articles/{{_id}}" class="dark-grey-text">{{blurb}}</a>
                </div>
                <a href="/articles/{{_id}}"><i class="fas fa-angle-double-right"></i></a>
              </div>

            </div>
            <!-- Grid column -->

          </div>
          <!-- Grid row -->

        </div>
        <!-- Small news -->
        {{/if}}
      {{/each}}  
    </div>
    <!--Grid column-->

  </div>
